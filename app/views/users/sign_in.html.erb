<h1>Log in</h1>

<div class="row">
  <div class>
    <%= form_for(:user, url: create_session_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Sign In", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
